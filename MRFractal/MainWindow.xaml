<Window x:Class="MRFractal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MRFractal"
        mc:Ignorable="d"
        Title="MainWindow"  Initialized="Window_Initialized" KeyUp="Window_KeyUp" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <CheckBox IsChecked="{Binding DirectMode}">Direkt Mode</CheckBox>
            <CheckBox IsChecked="{Binding NativDoubleMode}">Nativ Double Mode</CheckBox>
            <Image x:Name="MainImage" Stretch="Uniform"   MouseLeftButtonDown="MainImage_MouseLeftButtonDown" MouseRightButtonDown="MainImage_MouseRightButtonDown"/>
            <TextBox x:Name="MaxIteration" Text="{Binding Path=MaxIteration}"></TextBox>
        </StackPanel>
    </Grid>
</Window>
